<MyAutomationView>:
    orientation: 'vertical'
    run_items_list: run_items_list_id
    
    BoxLayout:
	    AutomationListView:
	        id: run_items_list_id
	        action_classes: root.action_classes
    BoxLayout:
        size_hint_y: .2
        Button:
            text: 'Add'
            on_press: run_items_list_id.add_item()
        Button:
            text: 'Remove'
            on_press: run_items_list_id.remove_item()
        Button:
            text: 'Run'
            on_press: run_items_list_id.run_all()
    BoxLayout:
        size_hint_y: .2
        Button:
            text: 'Load'
            on_press: app.OpenFileChooserLoad(app.config.get('files_and_dirs', 'method_files_dir'),['*.mtd'])
        Button:
            text: 'Save'
            on_press: app.OpenFileChooserSave(app.config.get('files_and_dirs', 'method_files_dir'),['*.mtd'])